<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>onemfive</groupId>
	<artifactId>cr</artifactId>
	<version>0.6.5-SNAPSHOT</version>

	<packaging>jar</packaging>

	<name>1m5-cr</name>
	<url>https://1m5.io</url>
	<description>Invisible Matrix Services - Censorship-Resistance Service</description>
	<inceptionYear>2017</inceptionYear>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.version>1.11</java.version>
		<ra.version>1.0.0</ra.version>
	</properties>

	<developers>
		<developer>
			<name>objectorange</name>
			<email>objectorange@1m5.io</email>
		</developer>
	</developers>

	<scm>
		<connection>scm:git@github.com/1m5/1m5-java</connection>
		<developerConnection>scm:git@github.com/1m5/1m5-java</developerConnection>
		<url>git@github.com/1m5/1m5-java</url>
	</scm>

	<repositories>
		<repository>
			<id>jitpack.io</id>
			<url>https://jitpack.io</url>
		</repository>
	</repositories>

	<dependencies>
        <!-- Resolving Architecture -->
		<dependency>
			<groupId>resolvingarchitecture</groupId>
			<artifactId>common</artifactId>
			<version>${ra.version}</version>
		</dependency>
        <dependency>
            <groupId>resolvingarchitecture</groupId>
            <artifactId>service-bus</artifactId>
            <version>${ra.version}</version>
        </dependency>
		<dependency>
			<groupId>resolvingarchitecture</groupId>
			<artifactId>mail-drop</artifactId>
			<version>${ra.version}</version>
		</dependency>
		<dependency>
			<groupId>resolvingarchitecture</groupId>
			<artifactId>did</artifactId>
			<version>${ra.version}</version>
		</dependency>
		<dependency>
			<groupId>resolvingarchitecture</groupId>
			<artifactId>keyring</artifactId>
			<version>${ra.version}</version>
		</dependency>
		<dependency>
			<groupId>resolvingarchitecture</groupId>
			<artifactId>http-server</artifactId>
			<version>${ra.version}</version>
		</dependency>
		<dependency>
			<groupId>resolvingarchitecture</groupId>
			<artifactId>tor-client</artifactId>
			<version>${ra.version}</version>
		</dependency>
		<dependency>
			<groupId>resolvingarchitecture</groupId>
			<artifactId>tor-hiddenservice</artifactId>
			<version>${ra.version}</version>
		</dependency>
        <dependency>
            <groupId>resolvingarchitecture</groupId>
            <artifactId>i2p-client</artifactId>
            <version>${ra.version}</version>
        </dependency>
		<dependency>
			<groupId>resolvingarchitecture</groupId>
			<artifactId>bluetooth-client</artifactId>
			<version>${ra.version}</version>
		</dependency>
		<dependency>
			<groupId>resolvingarchitecture</groupId>
			<artifactId>network-manager</artifactId>
			<version>${ra.version}</version>
		</dependency>
        <dependency>
            <groupId>resolvingarchitecture</groupId>
            <artifactId>press-freedom-index</artifactId>
            <version>${ra.version}</version>
        </dependency>
        <!-- Derby DB -->
        <dependency>
            <groupId>org.apache.derby</groupId>
            <artifactId>derby</artifactId>
            <version>10.14.2.0</version>
        </dependency>
        <!-- Neo4j DB -->
        <dependency>
            <groupId>org.neo4j</groupId>
            <artifactId>neo4j</artifactId>
            <version>3.5.14</version>
        </dependency>
        <dependency>
            <groupId>org.neo4j</groupId>
            <artifactId>neo4j-cypher</artifactId>
            <version>3.5.14</version>
        </dependency>

		<!-- Test -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.13.1</version>
			<scope>test</scope>
		</dependency>

	</dependencies>

	<build>
		<finalName>${project.name}-${project.version}</finalName>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
                    <include>**/*.json</include>
					<include>**/*.xml</include>
					<include>**/*.yml</include>
					<include>**/*.properties</include>
					<include>**/*.config</include>
					<include>**/*.txt</include>
					<include>**/*.crt</include>
					<include>**/*.png</include>
					<include>**/*.fxml</include>
					<include>**/*.css</include>
					<include>**/*.ttf</include>
					<include>**/*.otf</include>
				</includes>
			</resource>
		</resources>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.8.0</version>
                    <configuration>
                        <release>11</release>
                    </configuration>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<archive>
						<manifest>
							<mainClass>onemfive.Daemon</mainClass>
						</manifest>
					</archive>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
